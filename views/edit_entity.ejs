<!DOCTYPE html>
<html lang="sl">
<head>
    <meta charset="UTF-8">
    <title>Uredi Entiteto</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <style>
        body {
            background-color: #FFA500;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            overflow: hidden;
        }
        .container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            width: 80%;
            max-width: 500px;
            height: 90vh;
            overflow-y: auto;
        }
        .ujemanje-group {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .ujemanje-group:not(:last-child) {
            margin-bottom: 10px;
        }
        .ujemanje-input {
            width: 48%;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Uredi Entiteto</h2>
        <form action="/admin/update/<%= entity.idEntiteta %>" method="POST">
            <div class="input-field">
                <input id="naziv" type="text" name="naziv" value="<%= entity.naziv %>" required>
                <label for="naziv" class="active">Naziv</label>
            </div>
            <div class="input-field">
                <input id="kategorija" type="text" name="kategorija" value="<%= entity.kategorija %>" required>
                <label for="kategorija" class="active">Kategorija</label>
            </div>
            <div class="input-field">
                <input id="opis" type="text" name="opis" value="<%= entity.opis %>" required>
                <label for="opis" class="active">Opis</label>
            </div>
            <div class="input-field">
                <input id="negLastnosti" type="text" name="negLastnosti" value="<%= entity.negLastnosti %>" required>
                <label for="negLastnosti" class="active">Negativne Značilnosti</label>
            </div>
            <div class="input-field">
                <input id="pozLastnosti" type="text" name="pozLastnosti" value="<%= entity.pozLastnosti %>" required>
                <label for="pozLastnosti" class="active">Pozitivne Značilnosti</label>
            </div>
            <h5>Ujemanja</h5>
            <div id="ujemanjeContainer">
                <% if (entity.ujemanja) { %>
                    <% for (let ujemanje in entity.ujemanja) { %>
                        <div class="ujemanje-group">
                            <input type="hidden" name="existingUjemanjeEntity[]" value="<%= ujemanje %>">
                            <input type="text" name="ujemanjeEntity[]" value="<%= ujemanje %>" class="ujemanje-input" required>
                            <input type="number" name="ocenaUjemanja[]" value="<%= entity.ujemanja[ujemanje].ocena_ujemanja %>" class="ujemanje-input" min="0" max="10" required>
                        </div>
                    <% } %>
                <% } %>
            </div>
            <button type="button" onclick="addUjemanje()" class="btn green">Dodaj ujemanje</button>
            <button type="submit" class="btn orange">Posodobi</button>
            <button type="button" onclick="location.href='/admin'" class="btn grey">Nazaj</button>
        </form>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        function addUjemanje() {
            const container = document.getElementById('ujemanjeContainer');
            const newGroup = document.createElement('div');
            newGroup.className = 'ujemanje-group';
            newGroup.innerHTML = `
                <input type="text" name="ujemanjeEntity[]" placeholder="Ime Entitete" class="ujemanje-input" required>
                <input type="number" name="ocenaUjemanja[]" placeholder="Ocena Ujemanja" class="ujemanje-input" min="0" max="10" required>
            `;
            container.appendChild(newGroup);
        }
    </script>
</body>
</html>
