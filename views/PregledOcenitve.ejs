<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Persona Animal</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"> <!-- Material Icons -->
  <link rel="stylesheet" href="/pregledOcenitve.css">
</head>
<body>
  <div class="container text-center">
    <!-- Responsive Wrapper for all content -->
    <div class="row">
      <div class="col-12">
        <div class="wrapper">
          <div class="image-container">
            <img src="<%= entity.slika %>" class="card-img-top img-fluid" alt="<%= entity.naziv %>">
          </div>
          <div class="info-container">
            <div class="entity-name"><%= entity.naziv %></div>
            <span class="close-btn material-icons" aria-label="Delete result">delete</span>
            <div class="card-body">
              <div class="attributes">
                <p><%= entity.opis %></p>
              </div>
              <div class="traits-container">
                <div class="trait positive">
                  <span class="material-icons">sentiment_very_satisfied</span>
                  <div class="positive-traits">
                    <ul>
                      <% entity.pozLastnosti.split(',').forEach(function(trait) { %>
                        <li><%= trait.trim() %></li>
                      <% }); %>
                    </ul>
                  </div>
                </div>
                <div class="trait negative">
                  <span class="material-icons">sentiment_very_dissatisfied</span>
                  <div class="negative-traits">
                    <ul>
                      <% entity.negLastnosti.split(',').forEach(function(trait) { %>
                        <li><%= trait.trim() %></li>
                      <% }); %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Alert -->
  <div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="confirmationModalLabel">Opozorilo</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Ali ste prepričani da želite izbrisati rezultat samoocenitve?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Ne</button>
          <button type="button" class="btn btn-danger" id="confirmDelete">Da</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="/pregledOcenitve.js"></script>
</body>
</html>
