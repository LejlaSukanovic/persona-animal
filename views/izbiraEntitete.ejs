<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Izbira Entitete</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/izbiraEntitete.css">
    <link rel="stylesheet" href="/footer.css">
    <script src="https://cdn.jsdelivr.net/npm/progressbar.js"></script>
</head>

<body>
    <div class="container">
        <h1>Samoocenitev</h1>
        <p>Izberite fotografijo</p>

        <div class="entities-container">
            <div id="entity1" class="entity" data-index="0">
                <img src="<%= entities[0].slika %>" alt="<%= entities[0].naziv %>">
                <p><%= entities[0].naziv %></p>
            </div>
            <div id="entity2" class="entity" data-index="1">
                <img src="<%= entities[1].slika %>" alt="<%= entities[1].naziv %>">
                <p><%= entities[1].naziv %></p>
            </div>
        </div>

        <div class="progress-bar-container">
            <div id="progress-bar"></div>
        </div>
    </div>

    <footer class="bg-dark text-white text-center py-3">
        <div class="container1">
            <div class="row">
                <div class="col" onclick="navigateTo('/samoocenitev');">Samoocenitev</div>
                <div class="col" onclick="navigateTo('/ujemanje');">Ujemanje</div>
            </div>
        </div>
    </footer>

    <script>
        const entities = <%- JSON.stringify(entities) %>;

        function navigateTo(path) {
            window.location.href = path;
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/izbiraEntitete.js"></script>
</body>

</html>
