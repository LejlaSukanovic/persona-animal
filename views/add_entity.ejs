<!DOCTYPE html>
<html lang="sl">
<head>
    <meta charset="UTF-8">
    <title>Dodaj Entiteto</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <style>
        body {
            background-color: #FFA500;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            width: 80%;
            max-width: 500px;
        }
        .ujemanje-group {
            margin-top: 20px;
            border: 1px solid #ccc;
            padding: 10px;
            border-radius: 5px;
        }
        .ujemanje-group:not(:last-child) {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Dodaj Entiteto</h2>
        <form action="/admin/add-entity" method="POST">
            <div class="input-field">
                <input id="naziv" type="text" name="naziv" required>
                <label for="naziv">Naziv</label>
            </div>
            <div class="input-field">
                <select id="existingCategory" name="existingCategory">
                    <option value="" disabled selected>Izberite Kategorijo</option>
                    <% categories.forEach(function(category) { %>
                        <option value="<%= category %>"><%= category %></option>
                    <% }); %>
                </select>
                <label for="existingCategory">Obstoje훾a Kategorija</label>
            </div>
            <div class="input-field">
                <input id="newCategory" type="text" name="newCategory">
                <label for="newCategory">Nova Kategorija (훾e ni na seznamu)</label>
            </div>
            <div class="input-field">
                <input id="opis" type="text" name="opis" required>
                <label for="opis">Opis</label>
            </div>
            <div class="input-field">
                <input id="negLastnosti" type="text" name="negLastnosti" required>
                <label for="negLastnosti">Negativne Zna훾ilnosti</label>
            </div>
            <div class="input-field">
                <input id="pozLastnosti" type="text" name="pozLastnosti" required>
                <label for="pozLastnosti">Pozitivne Zna훾ilnosti</label>
            </div>
            <div id="ujemanjeContainer">
                <!-- Container for dynamic ujemanje inputs -->
                <div class="ujemanje-group">
                    <input type="text" name="ujemanjeEntity[]" placeholder="Ime Entitete" >
                    <input type="number" name="ocenaUjemanja[]" placeholder="Ocena Ujemanja" min="0" max="10" >
                </div>
            </div>
            <button type="button" onclick="addUjemanje()" class="btn green">Dodaj ujemanje</button>
            <button type="submit" class="btn orange">Dodaj</button>
        </form>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var elems = document.querySelectorAll('select');
            var instances = M.FormSelect.init(elems);
        });

        function addUjemanje() {
            const container = document.getElementById('ujemanjeContainer');
            const newGroup = document.createElement('div');
            newGroup.className = 'ujemanje-group';
            newGroup.innerHTML = `
                <input type="text" name="ujemanjeEntity[]" placeholder="Ime Entitete" required>
                <input type="number" name="ocenaUjemanja[]" placeholder="Ocena Ujemanja" min="0" max="10" required>
            `;
            container.appendChild(newGroup);
        }
    </script>
</body>
</html>
