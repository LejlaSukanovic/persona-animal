<!DOCTYPE html>
<html lang="sl">
<head>
    <meta charset="UTF-8">
    <title>Dodaj Entiteto</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <style>
        body {
            background-color: #FFA500;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            overflow: hidden;
        }
        .container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            width: 80%;
            max-width: 500px;
            height: 90vh;
            overflow-y: auto;
        }
        .ujemanje-group {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .ujemanje-group:not(:last-child) {
            margin-bottom: 10px;
        }
        .ujemanje-input {
            width: 48%;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Dodaj Entiteto</h2>
        <form action="/admin/add-entity" method="POST" enctype="multipart/form-data">
            <div class="input-field">
                <input id="naziv" type="text" name="naziv" required>
                <label for="naziv">Naziv</label>
            </div>
            <div class="input-field">
                <select id="existingCategory" name="existingCategory">
                    <option value="" disabled selected>Izberite Kategorijo</option>
                    <% categories.forEach(function(category) { %>
                        <option value="<%= category %>"><%= category %></option>
                    <% }); %>
                </select>
                <label for="existingCategory">Obstoje훾a Kategorija</label>
            </div>
            <div class="input-field">
                <input id="newCategory" type="text" name="newCategory">
                <label for="newCategory">Nova Kategorija (훾e ni na seznamu)</label>
            </div>
            <div class="input-field">
                <input id="opis" type="text" name="opis" required>
                <label for="opis">Opis</label>
            </div>
            <div class="input-field">
                <input id="negLastnosti" type="text" name="negLastnosti" required>
                <label for="negLastnosti">Negativne Zna훾ilnosti</label>
            </div>
            <div class="input-field">
                <input id="pozLastnosti" type="text" name="pozLastnosti" required>
                <label for="pozLastnosti">Pozitivne Zna훾ilnosti</label>
            </div>
            <div class="file-field input-field">
                <div class="btn">
                    <span>Izberite sliko</span>
                    <input type="file" name="slika">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>
            <h5>Ujemanja</h5>
            <div id="ujemanjeContainer">
                <div class="ujemanje-group">
                    <input type="text" name="ujemanjeEntity[]" placeholder="Ime Entitete" class="ujemanje-input" required>
                    <input type="number" name="ocenaUjemanja[]" placeholder="Ocena Ujemanja" class="ujemanje-input" min="0" max="10" required>
                </div>
            </div>
            <button type="button" onclick="addUjemanje()" class="btn green">Dodaj ujemanje</button>
            <button type="submit" class="btn orange">Dodaj</button>
            <button type="button" onclick="location.href='/admin'" class="btn grey">Nazaj</button>
        </form>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var elems = document.querySelectorAll('select');
            var instances = M.FormSelect.init(elems);
        });

        function addUjemanje() {
            const container = document.getElementById('ujemanjeContainer');
            const newGroup = document.createElement('div');
            newGroup.className = 'ujemanje-group';
            newGroup.innerHTML = `
                <input type="text" name="ujemanjeEntity[]" placeholder="Ime Entitete" class="ujemanje-input" required>
                <input type="number" name="ocenaUjemanja[]" placeholder="Ocena Ujemanja" class="ujemanje-input" min="0" max="10" required>
            `;
            container.appendChild(newGroup);
        }
    </script>
</body>
</html>
